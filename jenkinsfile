pipeline{
    agent{label 'any'}
    stages{
        stage('copying the code'){
            step{
                echo "copying the code"
            }
        }

        stage('building the code'){
            step{
                echo "building the code "
            }
        }


        stage('deploying the code'){
            step{
                echo "this is deploying the code"
            }
        }
    }
}